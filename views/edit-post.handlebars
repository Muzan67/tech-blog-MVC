<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <section class="form-box">
  <form class="edit-post-form">
    <div>
      <div>Title</div>
      <input name="post-title" type="text" value="{{post.post_title}}" />
    </div>
    <div>
      <div>Content</div>

      <input name="post-comment" type="text" value="{{ post.post_text }}" />
    </div>

    <button type="submit">Update Post</button>
    <button type="button" class="delete-post-btn">Delete Post</button>
  </form>
  </section>
</article>

{{> comments post.comments}}

<script src="/public/javascript/edit-post.js"></script>
