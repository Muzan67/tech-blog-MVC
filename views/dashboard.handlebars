{{!goes with the controllers/dashboard-routes.js}}
  <h2>Create New Post</h2>
<section class="form-box">
  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="descripton">Content</label>
      <input type="text" id="post-content" name="description" />
    </div>
    <button type="submit" class="btn" id="submit"><a href="/">Create Post</a></button>
  </form>
</section>

{{!using the updated template on dashboard-routes.js}}
{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.post_id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/public/javascript/add-post.js"></script>